      <ul class="nav navbar-nav">

      <% if current_user || current_company %>
        <li class="active"><a href="#">Welcome!<span class="sr-only">(current)</span></a></li>
          <li><a href="/carted_products">Go to checkout!</a></li>
          <li><a href="/products/new">Create a new product!</a></li>
          <li class="active"><a href="/logout">Log out <span class="sr-only">(current)</span></a></li>
      <% else %>
        <li><a href="/login">Login</a></li>
        <li><a href="/signup">User signup</a></li>
        <li><a href="/companies/signup">Company signup</a></li>
      <% end %>

      </ul>
