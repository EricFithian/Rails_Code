  <div class="col-6 col-md-4"> <%= Recipe.first %> </div>
  <div class="col-6 col-md-4"><%= Recipe.second %></div>
  <div class="col-6 col-md-4"><%= Recipe.third %></div>
</div>
 -->
    <%= yield %>

  </body>
</html>
